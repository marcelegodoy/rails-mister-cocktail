<div class="container">
  <h1><strong>Cocktail:</strong>  <%= @cocktail.name %></h1>


  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <% end %>
  </ul>

  <%= link_to 'Edit Name', edit_cocktail_path %> |
  <%= link_to 'New Dose', new_cocktail_dose_path(@cocktail) %> |
  <%= link_to 'Back', cocktails_path %>


  <% if @cocktail.doses.exists? %>
        <div class="my-4">
          <h2 class="mb-4">Recipe</h2>
          <% @cocktail.doses.each do |dose| %>
          <div class="btn btn-info mr-1 mb-2">
            <%= dose.ingredient.name %> <span class="badge badge-light mx-2"><%= dose.description %> </span>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %><i class="far fa-trash-alt"></i><% end %>
          </div>
          <% end %>
        </div>
    <%= link_to 'Edit Doses', edit_cocktail_dose_path(@cocktail) %>
  <% end %>
</div>
