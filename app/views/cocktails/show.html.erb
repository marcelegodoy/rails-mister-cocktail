<div class="container">
  <h1><strong>Cocktail:</strong>  <%= @cocktail.name %></h1>


  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <% end %>
  </ul>

  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.association :ingredients %>
    <%= f.submit 'Create new Dose', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back', cocktails_path %>


  <h3 class="text-center">Recipe</h3>
  <h4>You will need:</h4>
    <ul>
      <% @cocktail.ingredients.each do |ingredient| %>
        <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
      <% end %>
    </ul>
</div>
